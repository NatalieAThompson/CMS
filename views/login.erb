<form action="/sign_in" method="post">
  <label for="username">
    Username:
  </label>
  <input type="text" id="username" name="username"
  value=<%= params[:username] || ""%>>
  <label for="password">
    Password:
  </label>
  <input type="password" id="password" name="password">
  <button type="submit">Sign In</button>
</form>